<div class="profile__brand__heading">
  <div class="brand__profile__img me-3">
    <h2 class="text-center fw-bold"><%= currentBrand.name.slice(0,2) %></h2>
  </div>
  <div class="d-flex flex-column">
    <h4 class="display-4 fw-bold"><%= currentBrand.name %></h4>
    <code class="text-success fw-bold">Brand</code>
  </div>
</div>

<div class="mt-5">
  <code class="text-white fw-bold me-3"
    >Location: <%= currentBrand.city%>, <%= currentBrand.country %></code
  >
  <code class="text-white fw-bold me-3"
    >Employees: <%= currentBrand.employeesCount %></code
  >
</div>

<div class="mt-5">
  <h5 class="fw-bold mb-4">We use Technologies</h5>
  <div>
    <div class="btn btn-outline-success me-2">
      <%= currentBrand.technologyStack %>
    </div>
  </div>
</div>

<div class="mt-5">
  <h5 class="fw-bold mb-4">About Us</h5>
  <p><%= currentBrand.brandDescription %></p>
</div>

<div class="mt-5">
  <h5 class="fw-bold mb-4">Contact Us</h5>
  <p>E-mail: <%= currentBrand.email %></p>
  <p>Phone Number: <%= currentBrand.phoneNumber %></p>
</div>

<div class="mt-5">
  <h6 class="fw-bold">Joined</h6>
  <p><%= currentBrand.date %></p>
  <a class="btn btn-dark mt-4 mb-5" role="button" href="/search/brands/all">
    <- Back
  </a>
</div>
