<div class="searchUsers__container">
  <div>
    <form method="GET" class="my-5 d-flex">
      <input
        type="text"
        class="form-control"
        name="q"
        value="<%= query.q %>"
        placeholder="Search a user"
      />
      <button class="btn btn-dark ms-3">Search</button>
    </form>

    <div class="mt-4">
      <% if (query.q) { %>
      <p>Search results for query: <%= query.q %></p>
      <% } %>
    </div>
  </div>

  <div class="mt-5">
    <p>
      Default Option:
      <a href="/users/csv" class="text-primary fw-bold">Generate Users CSV</a>
    </p>
  </div>

  <% users.forEach(user => { %>
  <div class="card m-5">
    <div class="card-body">
      <div class="d-flex align-items-center">
        <div class="user__img--profile me-3">
          <h4 class="text-center fw-bold"><%= user.firstName.slice(0,1) %></h4>
        </div>
        <h5 class="card-title fw-bold">
          <%= user.firstName %> <%= user.lastName %>
        </h5>
      </div>
      <a href="/user/<%= user.email %>" class="btn btn-dark mt-4"
        >Show Profile</a
      >
    </div>
  </div>
  <% }); %>
</div>
