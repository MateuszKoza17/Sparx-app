<div class="brand__signin__form">
  <div class="mt-5">
    <h2 class="fw-bold">Sign In</h2>
    <p>Sign in to your brand account</p>
  </div>

  <div class="mt-5">
    <form method="POST">
      <div>
        <label class="form-label">Email</label>
        <div>
          <input
            type="email"
            name="email"
            class="form-control mb-3"
            value="<%= reqBodyData.email %>"
            placeholder="Enter your email address"
          />
        </div>
        <% if(errors?.email) { %>
        <div class="text-danger mb-2 fw-bold"><%= errors.email.message %></div>
        <% } %>
      </div>
      <div>
        <label class="form-label">Password</label>
        <div>
          <input
            type="password"
            name="password"
            class="form-control mb-3"
            value="<%= reqBodyData.password %>"
            placeholder="Enter your password"
          />
        </div>
        <% if (errors?.password) { %>
        <div class="text-danger mb-2 fw-bold">
          <%= errors?.password.message %>
        </div>
        <% } %>
      </div>

      <button class="btn btn-dark sign__up__btn mt-5">Sign In</button>
      <div class="mt-5 text-center">
        <p>
          Don't have an Brand Account?
          <a href="/account/brand/signup" class="text-white">Sign Up</a>
        </p>
      </div>

      <% if (errors) { %>
      <div class="mt-5 text-danger mb-5">
        * Something went wrong, check email or password
      </div>
      <% } %>
    </form>
  </div>
</div>
