<div class="user__signin__form">
  <div class="mt-5">
    <h2 class="fw-bold">Sign In</h2>
    <p>Sign in to your Sparx account</p>
  </div>

  <div class="mt-5">
    <form method="POST">
      <div>
        <label class="form-label">Email</label>
        <div>
          <input
            type="email"
            name="email"
            class="form-control mb-3"
            value="<%= reqBodyData.email %>"
            placeholder="Enter your email address"
          />
        </div>
        <% if(errors?.email) { %>
        <div><%= errors.email.message %></div>
        <% } %>
      </div>
      <div>
        <label class="form-label">Password</label>
        <div>
          <input
            type="password"
            name="password"
            class="form-control mb-3"
            value="<%= reqBodyData.password %>"
            placeholder="Enter your password"
          />
        </div>
        <% if (errors?.password) { %>
        <div><%= errors.password.message %></div>
        <% } %>
      </div>

      <div class="d-flex justify-content-center flex-column">
        <div class="mt-5">
          <button class="btn btn-dark sign__in__btn">Sign In</button>
          <p class="mt-5 text-center">
            Don't have an Account?
            <a href="/account/user/signup" class="text-white fw-bold"
              >Sign Up</a
            >
          </p>
        </div>
      </div>

      <% if (errors) { %>
      <div class="text-danger mt-5 mb-5">
        * Something went wrong, check email or password
      </div>
      <% } %>
    </form>
  </div>
</div>
