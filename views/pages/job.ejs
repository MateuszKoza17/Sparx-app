  <div class="profile__img me-4"></div>
  <div>
    <h4 class="display-4 fw-bold"></h4>
    <p>
      <span class="fw-bold">Brand: <%= currentJobOffer.brandSlug %></span>
    </p>
    <code class="mt-3 text-success fw-bold">
      <%= currentJobOffer.employmentType %>
    </code>
  </div>
</div>

<div class="mt-5">
  <h4 class="fw-bold">Required Skills</h4>
  <div>
    <div type="button" class="btn btn-outline-success me-2">
      <%= currentJobOffer.techStack %>
    </div>
